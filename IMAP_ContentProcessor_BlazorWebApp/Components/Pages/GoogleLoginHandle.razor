@page "/google-login-handle"
@using IMAP_ContentProcessor_BlazorWebApp.Domain
@using Microsoft.AspNetCore.Authentication

@code {
    [CascadingParameter]
    public HttpContext HttpContext { get; set; }

    private readonly ILoginHandler loginHandler;
    private readonly IConfiguration configuration;

    public GoogleLoginHandle(ILoginHandler loginHandler, IConfiguration configuration)
    {
        this.loginHandler = loginHandler;
        this.configuration = configuration;
    }

    protected override async Task OnInitializedAsync()
    {
        if (HttpContext.User.Identity!.IsAuthenticated)
        {
            var authService = HttpContext.RequestServices.GetService<IAuthenticationService>();
            var authenticateResult = await authService!.AuthenticateAsync(HttpContext, configuration["AuthScheme"]);

            loginHandler.GetOrdersInformation(authenticateResult);
        }
    }
}
